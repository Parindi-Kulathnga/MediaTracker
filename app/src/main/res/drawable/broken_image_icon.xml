<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3a3a3a" />
        </shape>
    </item>
    
    <!-- Film strip pattern (same as default) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:width="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#4a4a4a" />
        </shape>
    </item>
    
    <item android:top="0dp" android:bottom="0dp" android:right="0dp" android:width="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#4a4a4a" />
        </shape>
    </item>
    
    <!-- Broken image indicator - X pattern using diagonal lines -->
    <!-- Top-left to bottom-right diagonal -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#FF5252" />
            <size android:width="200dp" android:height="6dp" />
        </shape>
    </item>
    
    <!-- Top-right to bottom-left diagonal (simulated with rotated shape) -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#FF5252" />
            <size android:width="6dp" android:height="200dp" />
        </shape>
    </item>
</layer-list>

